<body>
<%- include('../includes/navigation.ejs') %>
<main >
<div class="form-image">
  <div class="formContainer">
    <form action="/restaurant/edit-product" method="POST">
      <div class="form-floating mb-3 "> 
        <input type="text" class="form-control childLoginStyle"value="<%= restaurant.restaurantName %>" name="name" id="name" placeholder="Restaurant Name" required>
        <label for="name">Restaurant Name</label>
      </div>
      <div class="form-floating mb-3 ">
          <input type="text" name="imageUrl" value="<%= restaurant.imageUrl %>" class="form-control childLoginStyle" id="imageUrl"
          placeholder="imageUrl" required>
        <label for="imageUrl">imageUrl</label>
        </div>
        <div class="form-floating mb-3 ">
          <input type="text" name="location" value="<%= restaurant.location %>" class="form-control childLoginStyle" id="location"
          placeholder="location" required>
        <label for="location">Location</label>
        </div>
        <div class="form-floating mb-3 ">
          <input type="number" name="employee" value="<%= restaurant.employees %>" class="form-control childLoginStyle" id="employee"
          placeholder="rating" required>
        <label for="employee">No of Employees</label>
        </div>
        <div class="form-floating mb-3 child">
          <input type="number" name="foodItemsVeg" value="<%=restaurant.foodItemsVeg %>" class="form-control childLoginStyle" id="foodItemsVeg" rows="5" placeholder="foodItemsVeg" required>
          <label for="foodItemsVeg">Veg Food(No.)</label>
        </div>
        <div class="form-floating mb-3 child">
          <input type="number" name="foodItemsNonVeg" value="<%= restaurant.foodItemsNonVeg %>" class="form-control childLoginStyle" id="foodItemsNonVeg" rows="5" placeholder="foodItemsNonVeg" required>
          <label for="foodItemsNonVeg">NonVeg Food(No.)</label>
        </div>
      <input type="hidden" value="<%= restaurant.id %> " name = 'restaurantId' required>
      <div class="form-floating ">
        <button type="submit" class="btn btn-outline-warning btn-addproduct buttonMain">Update</button>
      </div>
    </form>
  </div>
   
